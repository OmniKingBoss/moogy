! ---------------------------------
! COLOR CONFIGURATION
! ---------------------------------

! special
*.foreground: #b8d0d9
*.background: #0b0f10

! black
*.color0: #0b0f10
*.color8: #47464e

! red
*.color1: #f69899
*.color9: #f9bdb3

! green
*.color2: #8badac
*.color10: #b5bd68

! yellow
*.color3: #c4af7d
*.color11: #dbb771

! blue
*.color4: #7183a9
*.color12: #afafc2

! magenta
*.color5: #f7c3ad
*.color13: #ffd9ca

! cyan
*.color6: #5e8d87
*.color14: #8abeb7

! white
*.color7: #707880
*.color15: #b8d0d9

! ---------------------------------
! XFT CONFIGURATION
! ---------------------------------

Xft.autohint: 0
Xft.hinting: 0
Xft.antialias: 0
Xft.rgba: rgb

! ---------------------------------
! URXVT CONFIGURATION
! ---------------------------------


URxvt.font: xft:Source Code Pro:size=8
URxvt.geometry: 92x24
URxvt.scrollBar: false
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.internalBorder: 24
URxvt.iso14755: false

! URxvt.perl-ext-common: default,keyboard-select
! UURxvt.keysym.M-Escape: perl:keyboard-select:activate
! URxvt.keysym.M-s: perl:keyboard-select:search

! fake transparency
! urxvt*transparent: true
! urxvt*shading: 30

! real transparency
! urxvt*depth: 32
! urxvt*background: rgba:0000/0000/0200/c800

! ---------------------------------
! ROFI CONFIGURATION
! ---------------------------------

rofi.color-enabled: true
rofi.color-window: #0b0f10, #0b0f10, #0b0f10 
rofi.color-normal: #0b0f10, #b9d0d9, #0b0f10, #0b0f10, #f9bdb3 
rofi.color-active: #0b0f10, #b48ead, #0b0f10, #0b0f10, #93e5cc
rofi.color-urgent: #0b0f10, #ebcb8b, #0b0f10, #0b0f10, #ebcb8b
rofi.modi: run,drun,window
rofi.font: SourceCodePro-Regular 8

! ---------------------------------
! DMENU CONFIGURATION
! ---------------------------------

dmenu.font: "Source Code Pro:size=8:antialias=false"
dmenu.foreground: #b8d0d9
dmenu.background: #0b0f10
dmenu.selbackground: #0b0f10
dmenu.selforeground: #f9bdb3

! ---------------------------------
! LUKE-ST CONFIGURATION
! ---------------------------------

*.alpha: 1
*.font: Source Code Pro:size=8:antialias=false
*.borderpx: 24
